<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorTitle</item>
        <!-- To change the background of options menu-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:scaleType">centerInside</item>

    </style>

    <style name="AppThemeSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorAccent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorSubtitle</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>

    </style>

    <style name="AppThemeStudyAnswer" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#000000</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">#000000</item>

        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="android:textColorHint">@color/colorSwitchTrackOff</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>

    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- To change the popup menu and app text color-->
        <item name="android:textColor">@color/colorTitle</item>
        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/chem_splashscreen_lite</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="ListViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--Extremely important: this is how you change highlight for overflow menu options on click-->
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorActivatedHighlight">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/colorAccent</item>

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="CustomCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!--Controls checkbox to be all white-->
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="CustomSeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <!--Controls seekbar to be all white-->
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>

    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!--Controls off position switch track to be a little darker then white-->
        <item name="android:colorControlNormal">@android:color/holo_green_light</item>
        <item name="android:colorControlActivated">@android:color/holo_green_light</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>

    </style>

    <style name="CustomCardViewStyle" parent="CardView">
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CustomCardViewStyle2" parent="CardView">
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>

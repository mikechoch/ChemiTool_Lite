<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardCornerRadius="12dp"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:id="@+id/full_card_background_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/cardview_element_type_back"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="top"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_back_scrollview"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingBottom="8dp"
                android:id="@+id/double_tap_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_name"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="top|left"
                    android:paddingTop="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_phase_icon"
                    android:paddingLeft="7dp"
                    android:layout_toRightOf="@id/backcard_element_name"
                    android:layout_alignBottom="@id/backcard_element_name"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_radioactive"
                    android:src="@drawable/ic_radioactive_black_24dp"
                    android:paddingLeft="3dp"
                    android:layout_toRightOf="@id/backcard_element_phase_icon"
                    android:layout_alignBottom="@id/backcard_element_phase_icon"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_overview"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Overview"
                    android:paddingTop="10dp"
                    android:layout_below="@id/backcard_element_name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_atomic_number"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_title_overview"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_phase"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_atomic_number"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_period"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_phase"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_group"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_period"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_year"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_group"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_atomic"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Atomic Properties"
                    android:paddingTop="10dp"
                    android:layout_below="@id/backcard_element_year"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_atomic_mass"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_title_atomic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_density"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_atomic_mass"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_config"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_density"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_electron_shell_text"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_config"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_electronegativity"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_electron_shell_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_atomic_radius"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_electronegativity"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_cov_radius"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_atomic_radius"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_van_radius"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_cov_radius"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_thermo"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Thermodynamic Properties"
                    android:paddingTop="10dp"
                    android:layout_below="@id/backcard_element_van_radius"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_thermal_conductivity"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_title_thermo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_melting"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Melting Point: "
                    android:layout_below="@id/backcard_element_thermal_conductivity"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_melting"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingTop="0.5dp"
                    android:layout_toRightOf="@id/backcard_title_melting"
                    android:layout_alignTop="@id/backcard_title_melting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_boiling"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Boiling Point: "
                    android:layout_below="@id/backcard_element_melting"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_boiling"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingTop="0.5dp"
                    android:layout_toRightOf="@id/backcard_title_melting"
                    android:layout_alignTop="@id/backcard_title_boiling"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_struct"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Structural Properties"
                    android:paddingTop="10dp"
                    android:layout_below="@id/backcard_element_boiling"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_title_crystal"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Crystal Structure: "
                    android:layout_below="@id/backcard_title_struct"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_crystal"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingTop="0.5dp"
                    android:layout_toRightOf="@id/backcard_title_crystal"
                    android:layout_alignTop="@id/backcard_title_crystal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_youngs_modulus"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_crystal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_shear_modulus"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_youngs_modulus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_bulk_modulus"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_shear_modulus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_mohs_hardness"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_bulk_modulus"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_vickers_hardness"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_mohs_hardness"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_brinell_hardness"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:layout_below="@id/backcard_element_vickers_hardness"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/backcard_getpro_button_bottom"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:theme="@style/CustomCardViewStyle"
                    app:cardBackgroundColor="@color/colorGetPro"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="3dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/backcard_element_brinell_hardness">

                    <RelativeLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upgrade to Pro"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/colorAccent"
                            android:layout_centerInParent="true"/>

                        <!--<RelativeLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="5dp"-->
                            <!--android:layout_alignParentBottom="true"-->
                            <!--android:background="@color/colorGetProShadow"/>-->

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backcard_element_electron_shell_image"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/wikipedia_icon"
        android:layout_gravity="center"
        android:src="@drawable/wikipedia_icon"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/atom_card_icon"
        android:layout_gravity="center"
        android:src="@drawable/atom_card_icon"
        android:visibility="invisible"/>

</android.support.v7.widget.CardView>
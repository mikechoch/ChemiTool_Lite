<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardCornerRadius="12dp"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:id="@+id/full_card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <RelativeLayout
            android:id="@+id/cardview_element_type"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="top"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/full_card_padded_background"
            android:paddingTop="25dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/cardview_element_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp"
                android:layout_below="@+id/cardview_element_config"
                android:layout_above="@+id/cardview_image_description"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/cardview_image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Text 6"
                android:textAlignment="center"
                android:textColor="#80000000"
                android:textSize="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/cardview_atomic_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Sample Text 1"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/cardview_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Text 2"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="55dp"
                android:layout_below="@+id/cardview_atomic_number" />

            <TextView
                android:id="@+id/cardview_element_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Text 3"
                android:textColor="#000000"
                android:textSize="18dp"
                android:paddingTop="14dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/cardview_element"
                android:layout_alignTop="@id/cardview_element"/>

            <TextView
                android:id="@+id/cardview_element_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Text 4"
                android:textColor="#000000"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:layout_toRightOf="@+id/cardview_element"
                android:layout_below="@+id/cardview_element_name"/>

            <TextView
                android:id="@+id/cardview_element_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Text 5"
                android:textColor="#000000"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/cardview_element"
                android:layout_below="@+id/cardview_element_config"/>

        </RelativeLayout>

    </FrameLayout>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/wikipedia_icon"
        android:layout_gravity="center"
        android:src="@drawable/wikipedia_icon"
        android:visibility="invisible"/>

</android.support.v7.widget.CardView>